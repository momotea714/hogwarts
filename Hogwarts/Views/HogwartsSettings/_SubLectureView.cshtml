@{
    var subLecture = ViewBag.SubLecture as Hogwarts.Models.SubLecture;
    var questions = ViewBag.Questions as IEnumerable<Hogwarts.Models.Question>;
}


<div class="accordion" id="acdSubLecture_@(subLecture.Id)">
    <h3 id="subLectureName_@(subLecture.Id)">
        @subLecture.SubLectureName
    </h3>
    <div>
        <input type="button" class="btn-xs Addbtn AddQuestion" data-subLectureId="@(subLecture.Id)" value="問題追加" />
        <input type="button" class="btn-xs Updatebtn UpdateSubLectureName" data-subLectureId="@(subLecture.Id)" value="講義内容名修正" />
        <input type="button" class="btn-xs Deletebtn DeleteSubLecture" data-subLectureId="@(subLecture.Id)" value="講義内容削除" />
        <table class="table table-hover table-striped">
            <tr>
                <th width="5%">
                    NO
                </th>
                <th width="10%">
                    問題名
                </th>
                <th width="20%">
                    難易度
                </th>
                <th width="20%">
                    見積時間(分)
                </th>
                <th width="10%">
                </th>
            </tr>
            <tbody id="tbody_@(subLecture.Id)">
                @foreach (var question in questions)
                {
                    @Html.Action("QuestionView", new { questionId = question.Id })

                }
            </tbody>
        </table>
    </div>
</div>
