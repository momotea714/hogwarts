@{
    var userPracticeRecords = ViewBag.UserPracticeRecords as IEnumerable<Hogwarts.Models.UserPracticeRecordViewModel>;
    var userPointRecords = ViewBag.UserPointRecords as IEnumerable<Hogwarts.Models.UserPointRecordViewModel>;
}

<div class="row" style="margin-left:10px;margin-right:10px;">
    <div class="col-md-6">
        <h5 style="margin-top:10px;">個人別演習問題進捗ランキング</h5>
        <table class="table" style="margin-top:0;margin-bottom:0;">
            <thead>
                <tr>
                    <th width="15%">順位</th>
                    <th width="50%">氏名</th>
                    <th width="35%">進捗率</th>
                </tr>
            </thead>
        </table>
        <div style="height:72vh;overflow-y:auto;">
            <table class="table table-striped">
                <tbody>
                    @foreach (var userPracticeRecord in userPracticeRecords)
                    {
                        <tr>
                            <td width="15%">@(userPracticeRecord.Rank)</td>
                            <td width="50%">@(userPracticeRecord.UserName)</td>
                            <td width="35%">@(userPracticeRecord.Progress) %</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6">
        <h5 style="margin-top:10px;">個人別ポイントランキング</h5>
        <table class="table" style="margin-top:0;margin-bottom:0;">
            <thead>
                <tr>
                    <th width="15%">順位</th>
                    <th width="50%">氏名</th>
                    <th width="35%">ポイント</th>
                </tr>
            </thead>
        </table>
        <div style="height:72vh;overflow-y:auto;">
            <table class="table table-striped">
                @foreach (var userPointRecord in userPointRecords)
                {
                <tr>
                    <td width="15%">@(userPointRecord.Rank)</td>
                    <td width="50%">@(userPointRecord.UserName)</td>
                    <td width="35%">@(userPointRecord.Point) 点</td>
                </tr>
                }
            </table>
        </div>
    </div>
</div>