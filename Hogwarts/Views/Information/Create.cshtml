@model Hogwarts.Models.Information

@{
    ViewBag.Title = "お知らせ-追加";
}

<style>
    .extrawide {
        width: 500px;
    }

    input, select, textarea {
        max-width: 500px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" style="margin-left:200px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h4>お知らせを追加</h4>
        <div class="form-group">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label extrawide">
                <input class="mdl-textfield__input extrawide" type="text" name="Title" id="Title">
                <label class="mdl-textfield__label extrawide" for="textbox2">お知らせタイトル</label>
            </div>
        </div>

        <div class="form-group">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label extrawide">
                <input class="mdl-textfield__input extrawide" type="text" name="CreateUserName" id="CreateUserName">
                <label class="mdl-textfield__label extrawide" for="textbox2">投稿者名</label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new { @class = "ckeditor", @id = "sampleEditor" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
