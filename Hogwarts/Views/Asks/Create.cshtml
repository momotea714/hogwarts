@model Hogwarts.Models.Ask

@{
    ViewBag.Title = "質問を追加";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-left:100px;margin-right:100px;">
        <div class="row">
            <div class="col-md-6">
                <h4 style="margin-left:30px;">質問を追加</h4>
            </div>
            <div class="col-md-6">
                <br>
                <div class="form-group">
                    <div class="col-lg-offset-10">
                        <input type="submit" value="登録" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" />
                    </div>
                </div>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Content, new { @class = "ckeditor", @id = "sampleEditor" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
