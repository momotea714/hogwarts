@model Hogwarts.Models.Ask

@Scripts.Render("~/bundles/ckeditor/ckeditor")
@Scripts.Render("~/bundles/ckeditor/adapters/ckeditoradapters")
@{
    ViewBag.Title = "質問を追加";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-6">
                <h2>質問を追加</h2>
            </div>
            <div class="col-md-6">
                <br>
                <div class="form-group">
                    <div class="col-lg-offset-10">
                        <input type="submit" value="登録" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Content, new { @class = "ckeditor", @id = "sampleEditor" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    CKEDITOR.replace('sampleEditor',
        {
            toolbar: [
                { name: 'clipboard', groups: ['clipboard', 'undo'], items: [] },
                { name: 'editing', groups: ['find', 'selection', 'spellchecker'], items: ['Scayt'] },
                { name: 'links', items: ['Link', 'Unlink', 'Anchor'] },
                { name: 'insert', items: ['Image', 'Table', 'HorizontalRule', 'SpecialChar'] },
                { name: 'tools', items: ['Maximize'] },
                { name: 'document', groups: ['mode', 'document', 'doctools'], items: ['Source'] },
                { name: 'others', items: ['-'] },
                '/',
                { name: 'basicstyles', groups: ['basicstyles', 'cleanup'], items: ['Bold', 'Italic', 'Strike', '-', 'RemoveFormat'] },
                { name: 'paragraph', groups: ['list', 'indent', 'blocks', 'align', 'bidi'], items: ['NumberedList', 'BulletedList', '-', 'Outdent', 'Indent', '-', 'Blockquote'] },
                { name: 'styles', items: ['Styles', 'Format'] },
            ],
            toolbarGroups: [
                { name: 'clipboard', groups: ['clipboard', 'undo'] },
                { name: 'editing', groups: ['find', 'selection', 'spellchecker'] },
                { name: 'links' },
                { name: 'insert' },
                { name: 'forms' },
                { name: 'tools' },
                { name: 'document', groups: ['mode', 'document', 'doctools'] },
                { name: 'others' },
                '/',
                { name: 'basicstyles', groups: ['basicstyles', 'cleanup'] },
                { name: 'paragraph', groups: ['list', 'indent', 'blocks', 'align', 'bidi'] },
                { name: 'styles' },
                { name: 'colors' },
            ],
            uiColor: '#9AB8F3'
        });
</script>
