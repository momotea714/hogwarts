@model IEnumerable<Hogwarts.Models.Group>

<br>
<br>
<table class="table table-hover">
    <tr>
        <th>
            グループ名
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            </td>
        </tr>
    }
</table>